/* 设置整个页面的背景为白色 */
.page {
  background-color: #ffffff;
  min-height: 100vh; /* 保证页面高度至少占满一屏 */
  padding: 20px;
}

/* 图片样式 */
.image {
  width: 80%;
  margin: 0 auto;
  display: block;
}

/* 文本居中样式 */
.text-center {
  text-align: center;
}

/* 设置文字和进度条之间的距离 */
.margin-top-xl {
  margin-top: 40px; /* 调整为更大的距离 */
}

.margin-top-xxl {
  margin-top: 60px; /* 进度条容器与其他元素保持更大的距离 */
}

/* 进度条容器样式 */
.progress-container {
  display: flex;
  justify-content: center; /* 使进度条居中 */
}

/* 进度条样式 */
.progress {
  height: 20px;
  background-color: #f0f0f0;
  border-radius: 10px;
  overflow: hidden;
  width: 80%; /* 宽度调整为80%以居中显示 */
  position: relative;
}

/* 灰色背景（未完成进度条部分） */
.progress-inactive {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #d3d3d3; /* 灰色 */
  border-radius: 10px;
  z-index: 1;
}

/* 动态进度条部分 */
.progress-active {
  height: 100%;
  border-radius: 10px;
  z-index: 2;
  transition: width 0.5s; /* 平滑过渡效果 */
}
